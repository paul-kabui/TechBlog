<div style="margin-top: 6rem;">
    <h1 class="text-center fw-bold">please signIn</h1>
    <form method="post" action="http://localhost:3000/login" class="col-md-4 ms-auto me-auto">
        <label class="form-label">Email:</label>
        <input type="email" class="form-control" name='email' required placeholder="Enter your email"/>
        <label class="form-label">password:</label>
        <input type="password" class="form-control" name="password" required placeholder="6 characters and above" minlength="6"/>
