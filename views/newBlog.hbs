<div style="margin-top: 5rem;">
    <div>
        <div class="container-md mb-4">
            <div class="row">
                <div class="col-md-6"><h5 class="text-muted fw-bold">Post a new blog</h4></div>
                <div class="col-md-6">
                    <a href="dashboard" class="float-end btn btn-sm px-5 btn-outline-dark">Back</a>
                </div>
            </div>
            <hr>
        </div>
        <div class="m-3">
            {{!-- remember to redirect when the post is saved --}}
            <form class="col-md-6 me-auto ms-auto border p-3 shadow" method="post" action="/newBlogForm">
                <label class="form-label">Title:</label>
                <input type="text" class="form-control" name="title" placeholder="Enter the blog title" required>
                <label class="form-label">Blog content:</label>
                <textarea type="text" name="content" placeholder="Enter the blog content here" class="form-control" rows="10"></textarea>
                <div class="btn-group">
                    <button class="mt-4 btn btn-sm btn-outline-dark">Post</button>
                    <a href="dashboard" class="align-self-end btn btn-sm btn-outline-dark">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>