<div style="margin-top: 6rem;">
    <h1 class="text-center fw-bold">Create an account</h1>
    <form method="post" class="col-md-4 ms-auto me-auto" action="http://localhost:3000/register">
        <label class="form-label">username:</label>
        <input type="text" class="form-control" name='username' required placeholder="username"/>
        <label class="form-label">Email:</label>
        <input type="email" class="form-control" name="email" required placeholder="Enter your mail">
        <label class="form-label">password:</label>
        <input type="password"class="form-control" name="password" required placeholder="6 characters and above" minlength="6"/>
        <button type="submit" class="mt-3 btn btn-outline-dark btn-sm">signUp</button><br>
        <span class="text-center">Already have an account? <a href="signin">signin</a></span>
    </form>
</div>