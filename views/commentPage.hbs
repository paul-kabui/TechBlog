<div style="margin-top: 5rem;">
    <div class="container-md">
        <a href="/" class="btn">Back</a>
        <hr>
    </div>
    <div class="container-md bg-light p-3">
        <div class="row">
            <div>
                <h1>{{blog.dataValues.title}}</h1>
            </div>
        </div>
        <div class="row">
            <p>
                {{blog.dataValues.content}}
            </p>
        </div>
        <div class="row">
            <div class="col-md-6"><p>created by: {{owner}}</p></div>
            <div class="col-md-6"><p>published on:<i>{{blog.dataValues.createdAt}}</i></p></div>
        </div>
    </div>
    <div class="container-md mt-3 mb-3">
        <form method="post" action="/commentForm" class="col-md-5">
            <label class="form-label">Leave a comment:</label>
            <textarea class="form-control" name="comment" type="text" rows="5" required placeholder="Write the comment here"></textarea>
            <button type="submit" class="btn btn-sm px-5 btn-outline-dark mt-3">Post</button>
        </form>
    </div>
    <div class="container-md">
        <div class="row g-3">
            {{#each comments as |data|}}
            <div class="col-md-4">
                <div class="rounded-3 p-3 bg-light border">
                    <span class="text-muted">published by: <i>{{data.dataValues.username}}</i></span>
                    <p>{{data.dataValues.content}}</p>
                    <span class="text-muted">posted on: <i>{{data.dataValues.createdAt}}</i></span>
                </div>
            </div>
            {{/each}}
            
        </div>
    </div>
</div>